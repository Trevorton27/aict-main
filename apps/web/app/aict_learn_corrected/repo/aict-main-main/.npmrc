# pnpm configuration

# Use strict peer dependencies
strict-peer-dependencies=false

# Auto install peers
auto-install-peers=true

# Use shamefully-hoist for better compatibility with tools
shamefully-hoist=true

# Store location (optional - uncomment to customize)
# store-dir=~/.pnpm-store

# Lockfile only (for production builds)
# frozen-lockfile=true

# Public hoist pattern (for tools that need to access deps)
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
public-hoist-pattern[]=@types/*

# Save exact versions
save-exact=false

# Node linker (use default for most cases)
# node-linker=isolated

# Enable workspace protocol
link-workspace-packages=true

# Dedupe peer dependencies
dedupe-peer-dependents=true
